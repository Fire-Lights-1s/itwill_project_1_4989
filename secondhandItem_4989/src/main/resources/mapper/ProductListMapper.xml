<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.ProductListMapper">

	<select id="getProductListAll" resultType="com.itwillbs.domain.ProductDTO">
		SELECT * FROM Product ORDER BY created_datetime DESC
	</select>

	<select id="getProductListByC" parameterType="java.lang.String" resultType="com.itwillbs.domain.ProductDTO">
		SELECT * FROM Product WHERE category_name=#{category_name} ORDER BY created_datetime DESC
	</select>

</mapper>

